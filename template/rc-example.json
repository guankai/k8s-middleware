{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "mysql",
    "namespace": "default"
  },
  "spec": {
    "replicas": 0,
    "selector": {"app":"mysql"},
    "template": {
      "metadata": {
        "labels": {"app":"mysql"}
      },
      "spec": {
        "containers": [{
          "name": "mysql",
          "image": "registry.hnaresearch.com/library/mysql:5.6",
          "ports": [{
            "containerPort": 3306
          }],
          "env": [{
            "name": "MYSQL_ROOT_PASSWORD",
            "value": "123456"
          }],
          "imagePullPolicy": "IfNotPresent"
        }],
        "restartPolicy": "Always"
      }
    }
  }
}